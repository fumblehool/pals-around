<%- include('partials/head') %>
<body>
    <div class="container">
        <%- include('partials/navbar') %>
        <center><h2>Sign up</h2></center>
        <div class="contact-form" style="width:60%;margin-left:30%;margin-top:20px;">

        <form method="post" class="form-horizontal col-md-8" role="form"
        action="/api/users/">
            <div class="form-group">
                <div class="col-md-4"><label for="name">Name</label>
                </div>
                <div class="col-md-8">
                    <input type="text" name="name"/>
                </div>
                <div class="col-md-4"> <label for="username">Username</label>
                </div>
                <div class="col-md-8">
                    <input type="text" name="username"/>
                </div>
                <div class="col-md-4"><label for="email">email</label>
                </div>
                <div class="col-md-8"><input type="email" name="email"/>
                </div>
                <div class="col-md-4"><label for="password">Password</label>
                </div>
                <div class="col-md-8"><input type="password" name="password"/>
                </div>
            </div>
            <div class="col-md-8 text-right">
                <button type="submit">Sign up</button>
            </div>
            <% if (error){%>
                <p style="color:red;">
                    <%= error %>
                </p>
            <%}%> 
        </form>
        </div>
    </div>
</body>

</html>