<%- include('partials/head') %>
<body>
    <div class="container">
        <%- include('partials/navbar') %>
        <div class="" style="overflow:hidden;">
        <h4>Hi! <%= username%></h4>
        <div style="border:display:block;overflow:hidden;">
        <form class="form-horizontal col-md-8" role="form" method="POST" action="/api/posts/">
        <div class="form-group">
            <label for="message" class="col-md-2">Status:</label>
            <div class="col-md-10">
                <textarea class="form-control" id="text" name="text" placeholder="status"></textarea>
            </div>
        </div>
 
        <div class="form-group">
            <div class="text-right">
                <button type="submit" class="btn btn-success">Post!</button>
            </div>
        </div>
    </form>
    </div>
    </div>
    <hr/>

    <% if (!data[0].length){%>
        <%for(var i=data.length-1;i>=0;i--){ %>
            <%for(var j=data[i]['posts'].length-1;j>=0;j--){ %>
                 <div class="" style="border: 1px solid #337ab7;width:100%;height:20%;">
                    <p><%=data[i]['username']%> said:</p>
                    <h4><%=data[i]['posts'][j]['text']%></h4>
                    <%=data[i]['posts'][j]['date']%>
                </div>
                <hr/>
            <% } %>
        <% } %>
    <%} else{%>
            <h4>It seems like you haven't followed anyone yet :(</h4>
    <% } %>

</div>
</div>
</body>

</html>